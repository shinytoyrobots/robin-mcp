{
  "name": "robin-mcp",
  "version": "1.0.0",
  "description": "Personal MCP server - knowledge base, API gateway, and writings hub",
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r src/dashboard/views dist/dashboard/",
    "dev:stdio": "tsx src/stdio.ts",
    "dev:http": "tsx src/http.ts",
    "inspect": "npx @modelcontextprotocol/inspector node dist/stdio.js",
    "start:stdio": "node dist/stdio.js",
    "start:http": "node dist/http.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.8.1",
    "dotenv": "^16.4.0",
    "express": "^5.2.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  }
}
