# Database
DB_PATH=./data/robin.db

# Personal website (for the writings resource)
WEBSITE_URL=https://example.com
RSS_FEED_URL=https://example.com/rss.xml

# LinkedIn profile URL
LINKEDIN_URL=https://linkedin.com/in/yourprofile

# GitHub (optional - enables github-search-repos tool)
GITHUB_TOKEN=

# Creative vault (private GitHub repo, e.g. user/repo)
VAULT_REPO=

# HTTP transport
HTTP_PORT=3001

# Auth token for HTTP transport (optional - enables bearer token auth)
AUTH_TOKEN=

# Read-only token for HTTP transport (optional)
READONLY_TOKEN=

# Google Workspace adapter (optional - enables gdocs-* tools)
# Path to google-mcp-server binary (e.g. google-mcp-server or /usr/local/bin/google-mcp-server)
GOOGLE_MCP_COMMAND=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Notion adapter (optional - enables notion-personal-* tools)
# Command: "npx" locally, "notion-mcp-server" on Railway (globally installed)
NOTION_MCP_COMMAND=
NOTION_TOKEN_PERSONAL=

# Toby MCP adapter (optional - enables toby-* tools)
TOBY_MCP_URL=
TOBY_MCP_TOKEN=

# Digest pipeline adapter (optional - enables digest-* tools)
DIGEST_PIPELINE_URL=
DIGEST_PIPELINE_TOKEN=
